@model StudentRecordsOmerYilmaz.Models.Student

<h2>Add Student</h2>

<form asp-action="Create" asp-controller="Student" method="post" id="studentForm">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" required />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GPA"></label>
        <input asp-for="GPA" class="form-control" required />
        <span asp-validation-for="GPA" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProgramCode">Program</label>
        <select asp-for="ProgramCode" asp-items="ViewBag.Programs" class="form-control" required>
            <option value="">-- Select a Program --</option>
        </select>
        <span asp-validation-for="ProgramCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success" id="submitButton">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script>
    document.getElementById("submitButton").addEventListener("click", function(event) {
        console.log("Submit button clicked!");
    });

    document.getElementById("studentForm").addEventListener("submit", function(event) {
        console.log("Form is being submitted!");
    });
</script>

